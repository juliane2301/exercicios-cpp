{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar arquivo C++ ativo",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",   // compila o arquivo aberto no editor
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
